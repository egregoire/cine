{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <div class="banner">
        <div class="container">
            <div class="banner-text">
                <p style="color: #1b1e21">
                    {% for movie in movies %}
                        {{ movie.original_title|json_encode }}
                    {% endfor %}
                </p>
            </div>
        </div>
    </div>

    <main role="main" class="container main">
        <div align="middle" style="min-height: 200px">&nbsp;</div>
    </main>

{% endblock %}
